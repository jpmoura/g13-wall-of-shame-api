{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/(.*)$": "<rootDir>/src/$1"
  },
  "coverageDirectory": "./coverage-e2e",
  "coveragePathIgnorePatterns": [
    "node_modules",
    "<rootDir>/test/utils/*"
  ],
  "collectCoverage": true,
  "reporters": ["default", "jest-sonar"]
}
